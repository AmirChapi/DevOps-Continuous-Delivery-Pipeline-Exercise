pipeline {
    agent any

    /* משתני סביבה גלובליים */
    environment {
        VERSION         = '1.2.0'                                  // אותו VERSION שיש ב-Dockerfile וב-zip_job.py
        ARTIFACTORY_URL = 'http://localhost:8081/artifactory'      // Artifactory רץ על 8081
    }

    stages {
        /* קלאון לקוד – בג׳וב מסוג "Pipeline script from SCM"
           Jenkins יוצר לבד את ה-stage "Declarative: Checkout SCM"
         */

        stage('Build in Docker') {
            steps {
                echo "Running zip_job.py inside Docker image 'zip-job-test' with VERSION=${env.VERSION}"

                // נריץ את הקונטיינר ב-Windows (bat = CMD)
                bat """
                    echo Current workspace: %WORKSPACE%

                    docker run --rm ^
                      -e VERSION=${VERSION} ^
                      -v "%WORKSPACE%":/workspace ^
                      -w /workspace ^
                      zip-job-test bash -c "python3 /tmp/zip_job.py && ls -l"
                """
            }
        }

        stage('Publish to Artifactory') {
            steps {
                echo "Uploading zip files from workspace to Artifactory..."

                // משתמש בסיסמה מהקרדנצ׳לס Jenkins (Username with password)
                withCredentials([usernamePassword(
                        credentialsId: 'artifactory-super-user',
                        usernameVariable: 'ART_USER',
                        passwordVariable: 'ART_PASS'
                )]) {
                    bat """
                        echo Listing zip files in workspace:
                        dir *.zip

                        for %%f in (*.zip) do (
                          echo Uploading %%f
                          curl -v -u "%ART_USER%:%ART_PASS%" ^
                            -T "%%f" ^
                            "${ARTIFACTORY_URL}/binary-storage/${VERSION}/%%f"
                        )

                        echo Finished uploading all zip files.
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo "Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Report') {
            steps {
                script {
                    def status = currentBuild.currentResult

                    mail(
                        to: 'amirmalka26@gmail.com',
                        subject: "Job ${env.JOB_NAME} #${env.BUILD_NUMBER} - ${status}",
                        body: """\
Job name:   ${env.JOB_NAME}
Build #:    ${env.BUILD_NUMBER}
Result:     ${status}

Console log: ${env.BUILD_URL}console
"""
                    )
                }
            }
        }
    }
}
