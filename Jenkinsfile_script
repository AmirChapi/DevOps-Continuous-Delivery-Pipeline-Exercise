pipeline {
    agent any

    environment {
        // גרסת האפליקציה שתיכנס גם בשם ה-ZIP וגם בנתיב ב-Artifactory
        VERSION         = '1.2.0'
        // ה-URL של ה-Artifactory (עובדים מול 8082 – ה-Router)
        ARTIFACTORY_URL = 'http://localhost:8082/artifactory'
    }

    stages {

        stage('Build in Docker') {
            steps {
                echo "Running zip_job.py inside Docker image 'zip-job-test' with VERSION=${env.VERSION}"

                // מריצים את ה-Docker image שבנית (zip-job-test) ומפעילים את ה-Python
                bat """
                    echo Current workspace: %CD%

                    docker run --rm ^
                      -e VERSION=${env.VERSION} ^
                      -v "%CD%":/workspace ^
                      -w /workspace ^
                      zip-job-test bash -c "python3 /tmp/zip_job.py && ls -l"
                """
            }
        }

        stage('Publish to Artifactory') {
            steps {
                echo 'Uploading zip files from workspace to Artifactory...'

                // מושכים את הסיסמה מה-Credentials ב-Jenkins (ID: artifactory-super-user)
                withCredentials([string(credentialsId: 'artifactory-super-user', variable: 'ART_PASS')]) {
                    bat """
                        echo Listing zip files in workspace:
                        dir *.zip

                        for %%f in (*.zip) do (
                          echo Uploading %%f
                          curl --fail -v -u "super-user:%ART_PASS%" -T "%%f" "${ARTIFACTORY_URL}/binary-storage/${VERSION}/%%f"
                        )

                        echo Finished uploading all zip files.
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Cleaning workspace...'
                cleanWs()
            }
        }

        stage('Report') {
            steps {
                script {
                    def status = currentBuild.currentResult

                    mail(
                        to: 'amirmalka26@gmail.com',
                        subject: "Job ${env.JOB_NAME} #${env.BUILD_NUMBER} - ${status}",
                        body: """Job name: ${env.JOB_NAME}
Build number: ${env.BUILD_NUMBER}
Result: ${status}

Build URL: ${env.BUILD_URL}
"""
                    )
                }
            }
        }
    }
}
