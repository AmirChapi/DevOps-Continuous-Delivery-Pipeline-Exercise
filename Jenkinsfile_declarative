pipeline {

    // הגדרת משתני סביבה גלובליים
    environment {
        VERSION = '1.2.0'
        DOCKER_HOST = 'npipe:////./pipe/docker_engine'

        ARTIFACTORY_SERVER_ID = 'Artifactory-TLV-Server'
        ART_REPO_KEY = 'binary-storage'

        // הגדרת שם האימג' לשימוש ב-stage
        IMAGE_NAME = 'zip-job-test'

        // נתיב ה-Workspace של Jenkins בתוך Windows (ה-PWD)
        WINDOWS_WORKSPACE = "${env.WORKSPACE}"

        // נתיב וירטואלי שנשתמש בו בתוך הקונטיינר (Linux path)
        CONTAINER_MOUNT_PATH = '/app'
    }

    // Agent none: מכבה את הטיפול האוטומטי של Docker Workflow בנתיבים
    agent none

    // Post actions (Email וניקוי Workspace)
    post {
        always {
            node('built-in') {
                cleanWs()
                echo "Pipeline finished cleanup."
            }
        }
        success {
            mail(
                to: 'amirmalka26@gmail00.com',
                subject: "Job ${env.JOB_NAME} - SUCCESS",
                body: "Pipeline completed successfully. Artifacts published to Artifactory."
            )
        }
        failure {
            echo "Pipeline FAILED. Check console output for errors."
        }
    }

    stages {

        // שלב 1: Build & Run Python (הרצה ידנית של Docker)
        stage('Build & Run Python') {
            agent {
                // חייב להיות agent כלשהו, נשתמש ב-built-in
                node('built-in')
            }
            steps {
                script {
                    echo "Running zip_job.py manually using docker run"

                    // הפעלת docker run עם נתיבי Volume Mount מפורשים
                    // -w /app: נתיב העבודה בתוך הקונטיינר
                    // -v C:/ProgramData/...:/app: מיפוי ה-Workspace של Windows לנתיב הלינוקסי /app

                    // שימו לב: אנו משתמשים ב-${WINDOWS_WORKSPACE} כדי ש-bat/shell ידעו שזה נתיב Windows.
                    bat """
                        docker run --rm ^
                            -w ${CONTAINER_MOUNT_PATH} ^
                            -v "${WINDOWS_WORKSPACE}":${CONTAINER_MOUNT_PATH} ^
                            ${IMAGE_NAME} ^
                            python3 /tmp/zip_job.py
                    """

                    // בדיקה שהקבצים נוצרו ב-Workspace של Windows
                    bat "dir *.zip"
                }
            }
        }

        // שלב 2: Publish ל-Artifactory (נותר ללא שינוי, משתמש בקבצים מה-Workspace של Windows)
        stage('Publish to Artifactory (Plugin)') {
            agent {
                node('built-in')
            }
            steps {
                script {
                    def server = Artifactory.server ARTIFACTORY_SERVER_ID
                    def buildInfo = Artifactory.newBuildInfo()
                    buildInfo.name = env.JOB_NAME
                    buildInfo.number = env.BUILD_NUMBER

                    server.upload (
                        spec: """{
                            "files": [
                                {
                                    "pattern": "*.zip",
                                    "target": "${ART_REPO_KEY}/${env.VERSION}/"
                                }
                            ]
                        }""",
                        buildInfo: buildInfo
                    )

                    server.publishBuildInfo buildInfo
                }
            }
        }
    }
}