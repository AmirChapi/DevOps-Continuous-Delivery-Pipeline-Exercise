pipeline {

    // הגדרת משתני סביבה גלובליים
    environment {
        VERSION = '1.2.0'
        // הערה 2: ה-ID של שרת Artifactory שהגדרת ב-Manage Jenkins -> System
        ARTIFACTORY_SERVER_ID = 'Artifactory-TLV-Server'
        ART_REPO_KEY = 'binary-storage' // שם הרפוזיטורי
    }

    // הערה 1.1: Agent מתוקן - משתמש באימג' שיצרת
    agent {
        docker {
            image 'zip-job-test' // <--- שם האימג' שיצרת ב-Dockerfile
            args '--privileged -u 0:0'
        }
    }

    // Post actions (הרצת מייל וניקוי Workspace בסיום)
    post {
        always {
            cleanWs()
        }
        success {
            echo "Pipeline finished successfully. Artifacts published."
            mail(
                to: 'amirmalka26@gmail00.com',
                subject: "Job ${env.JOB_NAME} - SUCCESS",
                body: "Pipeline completed successfully. Artifacts published to Artifactory."
            )
        }
        failure {
            echo "Pipeline FAILED. Check console output for errors."
        }
    }

    stages {

        // שלב 1: Build & Run Python
        stage('Build & Run Python') {
            steps {
                echo "Running zip_job.py inside Docker image '${agent.image}'"
                // הקובץ zip_job.py מופעל בתוך הקונטיינר (שכן הוא הועתק לשם ע"י ה-Dockerfile)
                sh 'python3 /tmp/zip_job.py'
                sh 'ls -l *.zip'
            }
        }

        // שלב 2: Publish ל-Artifactory באמצעות פלאגין (מתקן הערה 2)
        stage('Publish to Artifactory (Plugin)') {
            steps {
                script { // נדרש בלוק script בתוך Declarative כדי להשתמש ב-Groovy DSL של הפלאגין

                    // 1. קבלת מופע השרת מתוך הגדרות Jenkins
                    def server = Artifactory.server ARTIFACTORY_SERVER_ID

                    // 2. יצירת אובייקט Build Info (Metadata)
                    def buildInfo = Artifactory.newBuildInfo()
                    buildInfo.name = env.JOB_NAME
                    buildInfo.number = env.BUILD_NUMBER

                    // 3. העלאת קבצים באמצעות File Specs
                    server.upload (
                        // File Spec: כל קובץ .zip ב-Workspace
                        spec: """{
                            "files": [
                                {
                                    "pattern": "*.zip",
                                    "target": "${ART_REPO_KEY}/${env.VERSION}/" // נתיב היעד
                                }
                            ]
                        }""",
                        buildInfo: buildInfo // צרף את ה-Metadata
                    )

                    // 4. פרסום המטא-דאטה של ה-Build ל-Artifactory
                    server.publishBuildInfo buildInfo
                }
            }
        }
    }
}